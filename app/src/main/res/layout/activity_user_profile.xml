<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <!-- Title -->
    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSONNEL"
            android:textSize="14sp"
            android:textColor="#00E5FF"
            android:letterSpacing="0.2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPERATOR PROFILE"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#00E5FF"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- User Name -->
    <TextView
        android:id="@+id/tvUserName"
        style="@style/Protocol.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME: "
        android:textColor="@color/textColor"
        android:layout_marginBottom="8dp"/>

    <!-- User Level -->
    <TextView
        android:id="@+id/tvUserLevel"
        style="@style/Protocol.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL: "
        android:textColor="@color/accentColor"
        android:layout_marginBottom="24dp"/>

    <!-- Image (Kept existing src due to quota error) -->
    <ImageView
        android:id="@+id/ivSilhouette"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/silhouette_basic"
        android:layout_marginBottom="24dp"
        android:alpha="0.9" />

    <!-- User XP -->
    <TextView
        android:id="@+id/tvUserXP"
        style="@style/Protocol.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP: 0 / 100"
        android:layout_marginBottom="8dp"/>

    <!-- Custom Progress Bar -->
    <ProgressBar
        android:id="@+id/xpProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:layout_marginBottom="40dp"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        style="@style/Protocol.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:minWidth="120dp"/>

</LinearLayout>
