<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PersonalLevelingSystem" parent="Theme.AppCompat.DayNight" >
        <!-- No custom font family forced here, will use default -->
    </style>

    <style name="NeonDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:fontFamily">monospace</item>
        <item name="colorAccent">#00F0FF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B0B0B0</item>
        <item name="android:background">#0B0D12</item>
        <item name="android:windowBackground">#0B0D12</item>
        <!-- TimePicker specific overrides -->
        <item name="android:timePickerStyle">@style/Widget.Neon.TimePicker</item>
    </style>

    <style name="Widget.Neon.TimePicker" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="android:fontFamily">monospace</item> <!-- Use monospace for SciFi look -->
        <item name="android:timePickerMode">clock</item>
        <item name="android:numbersTextColor">#FFFFFF</item>
        <item name="android:numbersSelectorColor">#00F0FF</item>
        <item name="android:numbersBackgroundColor">#1A1D24</item>
        <item name="android:headerBackground">#0B0D12</item>
        <item name="android:headerTimeTextAppearance">@style/TextAppearance.Neon.TimePicker.Header</item>
    </style>

    <style name="TextAppearance.Neon.TimePicker.Header" parent="TextAppearance.MaterialComponents.TimePicker.Title">
        <item name="android:fontFamily">monospace</item> <!-- Use monospace for SciFi look -->
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>